[user]
	name = Philip Sotirov
	email = me@philipsotirov.com
[core]
	excludesfile = /Users/fipo/.gitignore_global
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "log"]
	author = green bold
[alias]
	aa = add --intent-to-add
	st = status
	ci = commit --verbose
	br = branch
	co = checkout
	cp = cherry-pick
	df = diff
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	reflg = reflog --format='%C(auto)%h %<|(17)%gd %C(blue)%ci%C(reset) %s'
[push]
	default = simple
[branch]
	autosetuprebase = always
[rerere]
	enabled = true
[rebase]
	autosquash = true
